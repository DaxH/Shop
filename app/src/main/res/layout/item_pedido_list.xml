<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="196dp"
        android:layout_height="211dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProductId"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Codigo Producto"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/txtUsuarioID"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            tools:text="Codigo Usuario" />

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Cantidad"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/txtTotalAPagar"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Total a pagar"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Estado"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="215dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inputProductId"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Codigo Producto"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/inputUsuarioID"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            tools:text="Codigo Usuario" />

        <TextView
            android:id="@+id/inputCantidad"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Cantidad"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/inputTotalAPagar"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Total a pagar"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/inputEstado"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Estado"
            android:textAlignment="viewStart" />
    </LinearLayout>

</LinearLayout>
